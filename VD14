public class vd14 {
    public static void main(String[] args){
        int[] a= {3,6,2,5,9,8,7};
        a[3] = a[4]*3;
        System.out.println("-----------");
        for(int i=0;i<a.length;i++){
            
            System.out.println(a[i]);
        }
        System.out.println("-----------");
        a[5] = a[1]*8;
        for(int x : a){
            
            System.out.println(x);
        }
    }
}
